{
  "base_directories": {
    "downloads": "C:\\Users\\%USERNAME%\\Downloads\\SoftwareInstaller",
    "installers": "C:\\Users\\%USERNAME%\\Downloads\\SoftwareInstaller\\Installers",
    "temp": "C:\\Users\\%USERNAME%\\AppData\\Local\\Temp\\SoftwareInstaller",
    "logs": "C:\\Users\\%USERNAME%\\Documents\\SoftwareInstaller\\Logs"
  },
  "software_list": [
    {
      "name": "Google Chrome",
      "method": "winget",
      "package_id": "Google.Chrome",
      "category": "Navigateur",
      "description": "Navigateur web de Google",
      "base_directory": "C:\\Program Files\\Google\\Chrome",
      "installer": {
        "type": "winget",
        "silent_args": ["--accept-package-agreements", "--accept-source-agreements", "--silent"]
      }
    },
    {
      "name": "Mon Logiciel Personnalisé",
      "method": "custom",
      "category": "Personnalisé",
      "description": "Exemple d'installation personnalisée avec téléchargement",
      "base_directory": "C:\\Program Files\\MonLogiciel",
      "installer": {
        "type": "custom",
        "download_url": "https://example.com/installer.exe",
        "filename": "mon_installer.exe",
        "silent_args": ["/S", "/D=C:\\Program Files\\MonLogiciel"],
        "checksum": "sha256:abc123def456...",
        "pre_install_commands": [
          "echo Préparation de l'installation...",
          "mkdir \"C:\\Program Files\\MonLogiciel\""
        ],
        "post_install_commands": [
          "echo Installation terminée",
          "echo Configuration des paramètres...",
          "reg add \"HKEY_LOCAL_MACHINE\\SOFTWARE\\MonLogiciel\" /v Installed /t REG_DWORD /d 1"
        ]
      }
    },
    {
      "name": "Logiciel avec Commandes Seules",
      "method": "custom",
      "category": "Personnalisé",
      "description": "Installation via commandes uniquement (sans téléchargement)",
      "base_directory": "C:\\Program Files\\LogicielCommandes",
      "installer": {
        "type": "custom",
        "pre_install_commands": [
          "echo Installation via commandes...",
          "mkdir \"C:\\Program Files\\LogicielCommandes\""
        ],
        "post_install_commands": [
          "echo Création du raccourci...",
          "echo Configuration terminée"
        ]
      }
    },
    {
      "name": "Logiciel avec Vérification de Dossier",
      "method": "custom",
      "category": "Personnalisé",
      "description": "Exemple avec vérification du dossier d'installation",
      "base_directory": "C:\\Users\\%USERNAME%\\AppData\\Local\\MonApp",
      "installer": {
        "type": "custom",
        "pre_install_commands": [
          "echo Création du dossier utilisateur...",
          "mkdir \"C:\\Users\\%USERNAME%\\AppData\\Local\\MonApp\""
        ],
        "post_install_commands": [
          "echo Vérification de l'installation...",
          "dir \"C:\\Users\\%USERNAME%\\AppData\\Local\\MonApp\""
        ]
      }
    }
  ]
}
